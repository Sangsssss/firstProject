{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">제목</th>
        <th scope="col">내용</th>
    </tr>
    </thead>
    <tbody>
    <!-- 해당 variable이 데이터의 묶음일 경우에는 for문과 같이 반복해서 View를 생성해준다! -->
    {{#articleList}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/articles/{{id}}">{{title}}</a> </td>
            <td>{{content}}</td>
        </tr>
    {{/articleList}}
    </tbody>
</table>
<a href="/articles/new" class="btn btn-primary">작성하기</a>
{{>layouts/footer}}